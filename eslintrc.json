{
    "env": {
		"browser": true,
		"node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
		"arrow-spacing": "error",
		"brace-style": [ "error", "stroustrup" ],
		"func-call-spacing": "error",
		"key-spacing": "error",
		"object-curly-spacing": [ "error", "always" ],
		"no-console": "off",
		"no-debugger": "warn",
		"no-multiple-empty-lines": "error"
    }
}
