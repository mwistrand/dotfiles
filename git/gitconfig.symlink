[init]
    defaultBranch = main

[include]
	path = ~/.gitconfig-local

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = red

[branch]
	autosetuprebase = always

[pull]
	rebase = true

[push]
	default = current # push current branch only
